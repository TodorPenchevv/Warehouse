<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1050.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controllers.CreateGood">
   <children>
      <Label layoutX="29.0" layoutY="26.0" text="Създаване на Стока">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <VBox layoutX="31.0" layoutY="97.0" prefHeight="245.0" prefWidth="300.0" spacing="15.0">
         <children>
            <TextField fx:id="good" promptText="Име на новата стока">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="price" promptText="Цена на новата стока">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="quantity" promptText="Количество">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="minQuantity" promptText="Минимално количество">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <Button fx:id="button" mnemonicParsing="false" onAction="#createButtonClicked" prefHeight="25.0" prefWidth="302.0" text="Създай">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <Label fx:id="successLabel" layoutX="29.0" layoutY="350.0" prefHeight="40.0" prefWidth="790.0" textFill="#22da41">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label fx:id="errorMsg" layoutX="31.0" layoutY="400.0" prefHeight="40.0" prefWidth="790.0" textFill="RED">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
